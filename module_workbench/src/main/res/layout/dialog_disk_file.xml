<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/fiil_dialog_white_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新建目录"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_gravity="center"/>

        <EditText
            android:id="@+id/input_name_disk_file_dialog"
            android:layout_width="240dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/fill_stroke_background"
            android:textSize="14sp"
            android:padding="8dp"
            android:hint="输入目录名称"
            />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_background_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <TextView
            android:id="@+id/cancel_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="12dp"
            android:clickable="true"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/grey_background_dark"/>

        <TextView
            android:id="@+id/ok_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="#999999"
            android:gravity="center"
            android:padding="12dp"
            android:clickable="true"/>

    </LinearLayout>

</LinearLayout>